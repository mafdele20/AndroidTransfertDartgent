<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:paddingVertical="@dimen/item_margin10">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_margin="@dimen/item_margin10"
        android:src="@drawable/mylogo"


        />

    <RelativeLayout
        android:layout_width="306dp"
        android:layout_height="115dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_default_name"
            android:textColor="@color/gold"
            android:textSize="@dimen/item_margin15"

            />

        <TextView
            android:id="@+id/montant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:text="@string/item_default_montant"
            android:textColor="@color/white"
            android:textSize="@dimen/item_margin20" />

        <TextView
            android:id="@+id/emetteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/montant"
            android:layout_marginTop="0dp"
            android:text="@string/item_default_emetteur"
            android:textColor="@color/white"
            android:textSize="@dimen/item_margin20" />

        <TextView
            android:id="@+id/recepteur"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/emetteur"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:text="@string/item_default_recepteur"
            android:textColor="@color/white"
            android:textSize="@dimen/item_margin20" />


    </RelativeLayout>

</LinearLayout>